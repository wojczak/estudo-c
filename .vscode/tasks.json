{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                "-std=c11",
                "-Wall",
                "-Wextra",
                "-g3",
                "src/main.c",
                "src/utils.c",
                "-Iinclude", // diz ao gcc onde buscar headers
                "-o",
                "output/debug.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}